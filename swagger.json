                    "ReceiptsType"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/token"
                    }
                ],
                "security": [
                    {
                        "token": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ReceiptType"
                            }
                        }
                    },
                    "401": {
                        "description": "Incorrect Credentials",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "403": {
                        "description": "Forbidden / Blocked",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
