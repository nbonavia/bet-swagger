        "/images/{id}": {
            "post": {
                "summary": "Upload Receipt Scan",
                "description": "When a receipt is created, the app will upload and added to the receipt's scanned image list using a multipart/form-data request. The uploaded file will be stored by api and this endpoint will return the full receipt object including the newly uploaded image references. Content-type header must be set to multipart/form-data. Supported images are jpg / png / gif.",
                "tags": [
                    "Images"
                ],
                "consumes": [
                    "multipart/form-data"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/token"
